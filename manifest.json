{
    "manifest_version": 3,
    "name": "Quick LLM",
    "description": "Get instant, inline AI responses on any webpage with two clicks. Right-click to send selected text to an LLM.",
    "version": "1.0",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "contextMenus",
        "scripting",
        "activeTab",
        "clipboardWrite",
        "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": ["content.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Quick LLM",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png"
        }
    }
}
